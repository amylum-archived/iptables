name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.1.1-2',
    checksum: '2fd6c38bf58c4731b51a5364c92c7986090f9ac5184c796c69192c478eeb388c'
  },
  libmnl: {
    version: '1.0.4-23',
    checksum: 'e090c2e48cb3f572276137f7a892c317b72a7ffb05a706095537b05b84dfdc03'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl', 'libnftnl_CFLAGS' => "-I#{dep(:libnftnl)}/usr/include -L#{dep(:libnftnl)}/usr/lib"
  make
  install
end

test do
  # TODO: add tests
end
