name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.0.9-5',
    checksum: 'dd27b73991008d4ecf3bc617ce7ceebff3b2d84778814e656a821ee37a601626'
  },
  libmnl: {
    version: '1.0.4-21',
    checksum: 'e30db51239a7474c361d8d5cfb0e1c983b275e9a104225d048ed6162d07eeb80'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl'
  make
  install
end

test do
  # TODO: add tests
end
