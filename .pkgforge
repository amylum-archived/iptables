name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnetfilter_conntrack: {
    version: '1.0.7-1',
    checksum: '2d83ad6792fdf797a540c93646259120294adcf5310fb4b644624be11d5f1107'
  },
  libnfnetlink: {
    version: '1.0.1-2',
    checksum: '928594b7db50c2b8a83d9616ce16e4eaf17cfd0a4abccf37441f92f9b5c64d83'
  },
  libnftnl: {
    version: '1.1.1-4',
    checksum: '27831392b31f0ef32e5661c3abbd5b84a9219dd67bda7e33f64094224191a085'
  },
  libmnl: {
    version: '1.0.4-25',
    checksum: 'b923bb247733a67b32ca0000f551a76d90132cf2f4192744b9a07b4a7218a766'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  env = @forge.deps.keys.each_with_object({}) do |x, hash|
    dir = dep(x)
    hash["#{x}_CFLAGS"] = "-I#{dir}/usr/include -L#{dir}/usr/lib"
    hash["#{x}_LIBS"] = "-l#{x.to_s.sub(/^lib/,'')} -L#{dir}/usr/lib"
  end
  configure env
  make env
  install
end

test do
  # TODO: add tests
end
