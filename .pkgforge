name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.0.8-2',
    checksum: 'bf34ab0a0ed84cc28590f9f003905b515eb7834cc79938003ebaeddff29efb69'
  },
  libmnl: {
    version: '1.0.4-18',
    checksum: 'a042cbf5a4442b478582de61ace4445a65c63984265c71c9c76293e5e5fdbc8c'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl'
  make
  install
end

test do
  # TODO: add tests
end
