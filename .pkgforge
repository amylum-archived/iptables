name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.1.1-1',
    checksum: '4ebfd9f1cf3aed1568b63c6f29ef8cf19aaa09a9568d362995a22cabe4cf7c91'
  },
  libmnl: {
    version: '1.0.4-22',
    checksum: 'b7107d73ac741993743b40dea9075e3a070a7a1df6cfd5a83201fb17b48e7d13'
  },
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl', 'libnftnl_CFLAGS' => "-I#{dep(:libnftnl)}/usr/include -L#{dep(:libnftnl)}/usr/lib"
  make
  install
end

test do
  # TODO: add tests
end
