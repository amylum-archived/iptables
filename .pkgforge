name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.0.8-1',
    checksum: '8d8a4415f5595ab3e4031331f25bf16cc182242f528797ea20443b2f68e5646c'
  },
  libmnl: {
    version: '1.0.4-17',
    checksum: 'f22411343ad43f646bfcc9c86b99aec46cbb91f2cbd7b71bc9c6f7ec4edf8ad3'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl'
  make
  install
end

test do
  # TODO: add tests
end
