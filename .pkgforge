name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: '1.0.7-7',
  libmnl: '1.0.4-14',
  'linux-api-headers': '4.11-2'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl'
  make
  install
end

test do
  # TODO: add tests
end
