name 'iptables'
org 'amylum'

licenses 'COPYING'

deps(
  libnftnl: {
    version: '1.1.1-3',
    checksum: '566cfd559135fce0e19681763b274b72253bfca4749e4a6980b81117ac0ab6a4'
  },
  libmnl: {
    version: '1.0.4-24',
    checksum: 'c6b5d9e9cb4516fce124f4de5a175f6b6f444e12b6ce49c2203ad096d233002e'
  },
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/iptables',
  'with-xtlibdir': '/usr/lib/iptables',
  sysconfdir: '/etc'
)
remove_linker_archives

cflags
harden

patch 'iptables-musl-fixes.patch'

build do
  run './autogen.sh'
  configure 'libnftnl_LIBS' => '-lnftnl', 'libnftnl_CFLAGS' => "-I#{dep(:libnftnl)}/usr/include -L#{dep(:libnftnl)}/usr/lib"
  make
  install
end

test do
  # TODO: add tests
end
